@model IEnumerable<Models.EF.UserGroup>

@{
    ViewBag.Title = "Quản lý Nhóm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý Nhóm người dùng</h2>

<p>
    <input type="button" class="btn btn-success" value="Thêm Nhóm người dùng" onclick="location.href='@Url.Action("Create", "UserGroups")'" />
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <input type="button" class="btn btn-sm btn-primary" value="Sửa"
                       onclick="location.href='@Url.Action("Edit", "UserGroups", new { id = item.GroupId })'" /> |
                <input type="button" class="btn btn-sm btn-danger" value="Xóa"
                       onclick="showDeleteConfirmationModal('@Url.Action("Delete", "UserGroups", new { id = item.GroupId })')" />
            </td>
        </tr>
    }
</table>

<!-- Modal Xác Nhận Xoá -->
<div id="deleteConfirmationModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xoá</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa nhóm người dùng này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <a id="confirmDeleteButton" class="btn btn-danger">Xóa</a>
            </div>
        </div>
    </div>
</div>

<script>
    function showDeleteConfirmationModal(deleteUrl) {
        // Gán URL của hành động xóa vào nút xác nhận trong modal
        document.getElementById("confirmDeleteButton").setAttribute("href", deleteUrl);

        // Hiển thị modal
        $('#deleteConfirmationModal').modal('show');
    }
</script>

<!-- Thêm các thư viện CSS và JS của Bootstrap nếu cần -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
